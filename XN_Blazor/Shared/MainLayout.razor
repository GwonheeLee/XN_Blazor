@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        <MudAppBarSpacer />
        <MudIconButton Icon="@Icons.Material.Outlined.PeopleAlt" Color="Color.Inherit" Edge="Edge.End" OnClick="LogoutClick" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5">Global No.1 Samyun</MudText>
        </MudDrawerHeader>
        <MudDivider />
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="px-8" MaxWidth="MaxWidth.False">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    [Inject] private IDialogService DialogService { get; set; }

    private async void LogoutClick()
    {
        bool? result = await DialogService.ShowMessageBox(
            "삼현", 
            "로그아웃 하시겠습니까?", 
            yesText:"로그아웃", cancelText:"취소");
        string state = result==null ? "Cancelled" : "Deleted!";
        StateHasChanged();
    }
}